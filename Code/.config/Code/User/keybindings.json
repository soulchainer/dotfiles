// Place your key bindings in this file to overwrite the defaults
[
{ "key": "ctrl+numpad1",                "command": "workbench.action.focusFirstEditor" },
{ "key": "ctrl+numpad2",                "command": "workbench.action.focusSecondEditor" },
{ "key": "ctrl+numpad3",                "command": "workbench.action.focusThirdEditor" },
{ "key": "alt+shift+c",         "command": "editor.action.addCommentLine",
                                     "when": "editorTextFocus" },
{ "key": "alt+shift+u",         "command": "editor.action.removeCommentLine",
                                     "when": "editorTextFocus" },
{ "key": "alt+shift+a",          "command": "editor.action.blockComment",
                                     "when": "editorTextFocus" },
{
    "key": "ctrl+alt+b",
    "command": "HookyQR.beautify",
    "when": "editorTextFocus"
},
{
    "key": "ctrl+alt+t",
    "command": "workbench.action.terminal.toggleTerminal"
},
{
    "key": "ctrl+`",
    "command": "outdent",
    "when": "editorTextFocus && !editorReadonly && !editorTabMovesFocus"
},
{
    "key": "shift+tab",
    "command": "-outdent",
    "when": "editorTextFocus && !editorReadonly && !editorTabMovesFocus"
},
{
  "key": "alt+w",
  "command": "editor.emmet.action.wrapWithAbbreviation"
}
]
