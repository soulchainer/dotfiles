!-------------------------------------------------------------------------------
!
!	U R X V T - Settings
!
URxvt*geometry:					80x25
URxvt*foreground:				grey80
URxvt*borderLess:				false
URxvt*depth:					32
URxvt*background:				[90]#000000
! fake transparency
urxvt*transparent: true
urxvt*shading: 10
URxvt*scrollBar_right:				true
URxvt.font:                                     xft:FiraCode:size=12:antialias=true:hinting=true
URxvt*cursorBlink:				true
URxvt*cursorUnderline:				true
URxvt*scrollColor:				#111111
URxvt*perl-ext:
URxvt*perl-ext-common:

!Nombre de terminal, para resolver problemas con SSH
URxvt*termName: rxvt

!Cursor
Xcursor.theme: Vainilla-DMZ-AA Xcursor.size: 22

URxvt*saveLines: 8192
URxvt.scrollBar: false
URxvt.cursorColor: #90EE90

!Colorear p√°ginas man
URxvt.colorIT:      #87af5f
URxvt.colorBD:      #d7d7d7
URxvt.colorUL:      #87afd7

